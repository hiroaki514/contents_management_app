<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="container">
    <h2 class="text-center">Content Management App</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 50%;" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width: 50%;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check d-flex justify-content-center mb-3">
          <%= f.check_box :remember_me, class: "form-check-input me-2" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
