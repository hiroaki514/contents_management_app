<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="container text-center">
    <h2 class="mb-5">Content Management App</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-4">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width: 50%; margin: 0 auto;" %>
      </div>

      <div class="form-group mb-4">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width: 50%; margin: 0 auto;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions">
        <% flash.each do |message_type, message| %>
          <div class="flash_error_message mb-3">
            <%= message %>
          </div>
        <% end%>

        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
